# Configurações do Sistema de Convite de Casamento
# Copie este arquivo para .env e ajuste os valores

# Chave secreta do Flask (IMPORTANTE: Use uma chave forte em produção)
SECRET_KEY=dev-key-change-in-production

# Configuração do Banco de Dados PostgreSQL (Railway)
# Substitua pela URL do seu banco PostgreSQL
# Formato: postgresql://usuario:senha@host:porta/database
DATABASE_URL=postgresql://usuario:senha@host:porta/database

# Configurações de Email (opcional - para notificações)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=seu-email@gmail.com
MAIL_PASSWORD=sua-senha-de-app

# Configurações de ambiente
FLASK_ENV=development
FLASK_DEBUG=True

# URL base do site (para links externos)
BASE_URL=http://localhost:5000

# Configurações de upload (se necessário para imagens)
UPLOAD_FOLDER=app/static/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB
